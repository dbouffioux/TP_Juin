<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>be.afelio.controllers.FrontController</servlet-class>
    <init-param>
      <param-name>database.url</param-name>
      <param-value>jdbc:postgresql://localhost:5432/festival</param-value>
    </init-param>
    <init-param>
      <param-name>database.user</param-name>
      <param-value>postgres</param-value>
    </init-param>
    <init-param>
      <param-name>database.password</param-name>
      <param-value>postgres</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/festival/*</url-pattern>
  </servlet-mapping>
</web-app>